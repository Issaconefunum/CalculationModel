@page
@model CalculationModel.Pages.ResultsPageModel
@{
	ViewData["Title"] = "Результаты расчета";
}
<style>
	body {
		font-family: 'Arial', sans-serif;
		line-height: 1.6;
		color: #333;
		background-color: #f9f9f9;
		margin: 0;
		padding: 20px;
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 30px;
		background-color: #fff;
		border-radius: 8px;
		box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
	}

	h1, h2, h3 {
		color: #2c3e50;
		margin-bottom: 20px;
	}

	h1 {
		text-align: center;
		font-size: 28px;
		padding-bottom: 15px;
		border-bottom: 1px solid #eee;
	}

	h3 {
		font-size: 20px;
		color: #3498db;
		margin-top: 25px;
	}

	.table {
		width: 100%;
		margin-bottom: 25px;
		border-collapse: collapse;
		background-color: #fff;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
	}

		.table th, .table td {
			padding: 12px 15px;
			text-align: left;
			border: 1px solid #ddd;
		}

		.table th {
			background-color: #f2f2f2;
			font-weight: 600;
		}

		.table tr:nth-child(even) {
			background-color: #f9f9f9;
		}

		.table tr:hover {
			background-color: #f1f1f1;
		}

	.btn {
		display: inline-block;
		padding: 10px 20px;
		background-color: #3498db;
		color: white;
		text-decoration: none;
		border-radius: 4px;
		border: none;
		cursor: pointer;
		font-size: 16px;
		transition: background-color 0.3s;
		margin-top: 15px;
	}

		.btn:hover {
			background-color: #2980b9;
		}

	.text-center {
		text-align: center;
	}

	.mt-4 {
		margin-top: 1.5rem;
	}

	.row {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		margin: 0 -15px;
		align-items: center;
	}

	.col-md-6 {
		flex: 0 0 50%;
		max-width: 80%;
		padding: 0 15px;
		box-sizing: border-box;
	}

	svg {
		max-width: 100%;
		height: auto;
		margin: 20px 0;
		background-color: #f8f9fa;
		border-radius: 4px;
		padding: 15px;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
	}

	.drawing {
		display: flex;
		flex-direction: column;
		justify-content: center;
		width: 100%;
		margin: 20px 0;
	}

	.drawing svg {
			width: 600px;
			height: 600px;
			max-width: 100%;
			background-color: #f8f9fa;
			border-radius: 4px;
			padding: 20px;
			box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
	}

	.drawing-container {
		position: relative;
		width: 100%;
		max-width: 600px;
		margin: 0 auto;
	}

	.drawing-wrapper {
		position: relative;
		width: 100%;
	}

	.drawing-image {
		width: 100%;
		height: auto;
		display: block;
	}

	.drawing-text {
		position: absolute;
		transform: translate(-50%, -50%);
		padding: 5px 10px;
		border-radius: 4px;
		font-size: 14px;
		font-weight: bold;
		color: #2c3e50;
		white-space: nowrap;
	}

	.calculation-results {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
		justify-content: space-between;
		margin-bottom: 30px;
	}

	.result-block {
		flex: 1;
		min-width: 300px;
		max-width: calc(50% - 10px);
		background-color: #f9f9f9;
		border-radius: 8px;
		padding: 20px;
		box-shadow: 0 0 5px rgba(0,0,0,0.1);
	}
</style>

<div class="container">
	<h1 class="text-center mb-4">Результаты расчета поковки</h1>
	<div class="calculation-results">
		<div class="result-block">
			<div class="drawing-container">
				<div class="drawing-wrapper">
					<img src="/images/чертеж_без_параметров.png" class="drawing-image" alt="Чертеж поковки" />

					<div class="drawing-text" style="top: 80%; left: 48%;">@Model.Result.OuterDiameterDetail мм</div>
					<div class="drawing-text" style="top: 90%; left: 48%;">@Model.Result.OuterDiameterBlank мм</div>
					<div class="drawing-text" style="top: 38%; left: 48%;">@Model.Result.InnerDiameterDetail мм</div>
					<div class="drawing-text" style="top: 45%; left: 48%;">@Model.Result.InnerDiameterBlank мм</div>
					<div class="drawing-text" style="position: absolute; top: 40%; left: 78%; transform: rotate(-90deg); transform-origin: right center;">@Model.Result.HeightBlank мм</div>
					<div class="drawing-text" style="position: absolute; top: 45%; left: 78%; transform: rotate(-90deg); transform-origin: right center;">@Model.Result.Height мм</div>
					<div class="drawing-text" style="top: 15%; left: 75%; ">Масса номинал @Model.Result.ForgingBlankMassNominal тонны</div>
					<div class="drawing-text" style="top: 20%; left: 75%; ">Масса максимал @Model.Result.ForgingBlankMassMax тонны</div>
					<div class="drawing-text" style="top: 15%; left: 25%; ">Выше стрелки - размеры детали</div>
					<div class="drawing-text" style="top: 20%; left: 25%; ">Ниже стрелки - размеры поковки</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<h3>Параметры заготовки:</h3>

					<table class="table table-bordered">
						<tr>
							<th>Высота детали</th>
							<td>@Model.Result.Height мм</td>
						</tr>
						<tr>
							<th>Внешний диаметр детали</th>
							<td>@Model.Result.OuterDiameterDetail мм</td>
						</tr>
						<tr>
							<th>Внутренний диаметр детали</th>
							<td>@Model.Result.InnerDiameterDetail мм</td>
						</tr>
						<tr>
							<th>Высота заготовки</th>
							<td>@Model.Result.HeightBlank мм</td>
						</tr>
						<tr>
							<th>Внешний диаметр заготовки</th>
							<td>@Model.Result.OuterDiameterBlank мм</td>
						</tr>
						<tr>
							<th>Внутренний диаметр заготовки</th>
							<td>@Model.Result.InnerDiameterBlank мм</td>
						</tr>
						<tr>
							<th>Масса заготовки номинальная</th>
							<td>@Model.Result.ForgingBlankMassNominal тонны</td>
						</tr>
						<tr>
							<th>Масса заготовки максимальная</th>
							<td>@Model.Result.ForgingBlankMassMax тонны</td>
						</tr>
					</table>
				</div>
			</div>
		</div>

		<div class="result-block">
			<div class="drawing-container">
				<div class="drawing-wrapper">
					<img src="/images/чертеж_без_параметров.png" class="drawing-image" alt="Чертеж поковки" />

					<div class="drawing-text" style="top: 80%; left: 48%;">@Model.Result.OuterDiameterDetail мм</div>
					<div class="drawing-text" style="top: 90%; left: 48%;">@Model.Result.OuterDiameterBlankWithTest мм</div>
					<div class="drawing-text" style="top: 38%; left: 48%;">@Model.Result.InnerDiameterDetail мм</div>
					<div class="drawing-text" style="top: 45%; left: 48%;">@Model.Result.InnerDiameterBlankWithTest мм</div>
					<div class="drawing-text" style="position: absolute; top: 40%; left: 78%; transform: rotate(-90deg); transform-origin: right center;">@Model.Result.HeightBlankWithTest мм</div>
					<div class="drawing-text" style="position: absolute; top: 45%; left: 78%; transform: rotate(-90deg); transform-origin: right center;">@Model.Result.Height мм</div>
					<div class="drawing-text" style="top: 15%; left: 75%; ">Масса номинал @Model.Result.ForgingBlankWithTestMassNominal тонны</div>
					<div class="drawing-text" style="top: 20%; left: 75%; ">Масса максимал @Model.Result.ForgingBlankWithTestMassMax тонны</div>
					<div class="drawing-text" style="top: 15%; left: 25%; ">Выше стрелки - размеры детали</div>
					<div class="drawing-text" style="top: 20%; left: 25%; ">Ниже стрелки - размеры поковки</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<h3>Параметры заготовки с пробой:</h3>

					<table class="table table-bordered">
						<tr>
							<th>Высота детали</th>
							<td>@Model.Result.Height мм</td>
						</tr>
						<tr>
							<th>Внешний диаметр детали</th>
							<td>@Model.Result.OuterDiameterDetail мм</td>
						</tr>
						<tr>
							<th>Внутренний диаметр детали</th>
							<td>@Model.Result.InnerDiameterDetail мм</td>
						</tr>
						<tr>
							<th>Высота заготовки с пробой</th>
							<td>@Model.Result.HeightBlankWithTest мм</td>
						</tr>
						<tr>
							<th>Внешний диаметр заготовки с пробой</th>
							<td>@Model.Result.OuterDiameterBlankWithTest мм</td>
						</tr>
						<tr>
							<th>Внутренний диаметр заготовки с пробой</th>
							<td>@Model.Result.InnerDiameterBlankWithTest мм</td>
						</tr>
						<tr>
							<th>Масса заготовки с пробой номинальная</th>
							<td>@Model.Result.ForgingBlankWithTestMassNominal тонны</td>
						</tr>
						<tr>
							<th>Масса заготовки с пробой максимальная</th>
							<td>@Model.Result.ForgingBlankWithTestMassMax тонны</td>
						</tr>
					</table>
				</div>
			</div>
		</div>

	</div>
		
	<div class="text-center mt-4">
		<a href="/Questionnaire" class="btn btn-primary">Новый расчет</a>
	</div>
</div>
