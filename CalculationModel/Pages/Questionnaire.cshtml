@page
@model CalculationModel.Pages.QuestionnaireModel
@{
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Расчет поковок кольца раскатного</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
            color: #2c3e50;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input[type="number"], input[type="text"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .form-row {
            display: flex;
            gap: 15px;
        }
        .form-col {
            flex: 1;
        }
        button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            display: block;
            margin: 20px auto;
            width: 200px;
        }
        button:hover {
            background-color: #2980b9;
        }
        .note {
            font-size: 0.9em;
            color: #666;
            margin-top: 3px;
        }
        .drawing-image {
            display: block; /* Убирает лишнее пространство под изображением */
            width: 100%; /* Занимает всю ширину родителя */
            height: auto; /* Сохраняет пропорции */
            max-width: 100%; /* Гарантирует, что не выйдет за пределы */
            margin: 20px auto; /* Отступы сверху/снизу и центрирование */
            object-fit: contain; /* Сохраняет пропорции, полностью помещаясь в контейнер */
            border-radius: 4px; /* Скругление углов */
            box-shadow: 0 0 5px rgba(0,0,0,0.1); /* Легкая тень для красоты */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Выберите параметры поковки кольца раскатного</h1>

        <img src="/images/\чертеж.png" class="drawing-image"/>

        <form id="forgingForm" method="post" runat="server">
            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        <label for="outerDiameter">Наружный диаметр детали (D), мм</label>
                        <input type="number" id="outerDiameter" name="outerDiameter" required value="1360">
                    </div>

                    <div class="form-group">
                        <label for="innerDiameter">Внутренний диаметр детали (d), мм</label>
                        <input type="number" id="innerDiameter" name="innerDiameter" required value="540">
                    </div>

                    <div class="form-group">
                        <label for="height">Высота детали (H), мм</label>
                        <input type="number" id="height" name="height" required value="215">
                    </div>
                </div>
                <div class="form-col">
                    <div class="form-group">
                        <label for="partsCount">Количество деталей в поковке (X)</label>
                        <input type="number" id="partsCount" name="partsCount" required min="1" value="2">
                    </div>

                    <div class="form-group">
                        <label for="cutLength">Длина реза (Y), мм</label>
                        <input type="number" id="cutLength" name="cutLength" required value="20">
                    </div>

                    <div class="form-group">
                        <label for="testAllowance">Напуск на пробу (Q), мм</label>
                        <input type="number" id="testAllowance" name="testAllowance" required value="60">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="heatTreatmentAllowance">Напуск на термообработку, мм</label>
                <input type="number" id="heatTreatmentAllowance" name="heatTreatmentAllowance" value="0">
            </div>

            <button type="submit">Выполнить расчет</button>
        </form>
    </div>

</body>
</html>